<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title OnlineJokes</title>

    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

</head>
<body>
    <nav style="background-color: #152F4F;" class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand myclass  animated bounceInLeft" href="#" style="font-size: 40px;">অনলাইন জোকস</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="menual collapse navbar-collapse justify-content-end" id="navbarNavAltMarkup">

            @if ( Session["AdminId"] == null)
            {
                @*<div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.LogIn" href="@Url.Action("LogIn","Authentication")">Login</a>
                    <a class="nav-item nav-link @ViewBag.AdminRegistration" href="@Url.Action("AdminRegistration", "Authentication")"> Register</a>
                </div>*@
            }         
            @if (Session["AdminId"] != null)
            {
                <div class="navbar-nav">
                    <a class="nav-item nav-link @ViewBag.Index" href="@Url.Action("Index", "Category")">Category</a>
                    <a class="nav-item nav-link @ViewBag.JokesIndex" href="@Url.Action("JokesIndex", "Jokes")">Jokes</a>
                    <a class="nav-item nav-link " href="@Url.Action("AdminLogout", "Authentication")">Logout</a>
                </div>
            }
        </div>
    </nav>
    @RenderBody()

 <footer class="page-footer font-small unique-color-dark" style=" background-color: #152F4F; color: white; margin-bottom: -20px; padding-top: 2em; ">      
        <div class="container text-center text-md-left mt-5">        
            <div class="row mt-3">          
                <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                    <h6 class="font-weight-bold">Online jokes</h6>
                    <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                    <p>
                        In this site, a client can learn for their fun.
                    </p>
                </div>        
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">             
                    <h6 class="text-uppercase font-weight-bold">Contact</h6>
                    <hr class="deep-purple accent-2 mb-4 mt-0 d-inline-block mx-auto" style="width: 60px;">
                    <p>
                        <i class="fas fa-home mr-3"></i> Bangladesh
                    </p>
                    <p>
                        <i class="fas fa-envelope mr-3"></i> jokes@webemail.com
                    </p>
                    <p>
                        <i class="fas fa-phone mr-3"></i> + 01 123 345 67
                    </p>
                    <p>
                        <i class="fas fa-print mr-3"></i> + 01 234 567 89
                    </p>

                </div>
             
            </div>
         
        </div>
      
        <div class="footer-copyright text-center py-3">
          Life is beautiful
        </div>
    </footer>
</body>
</html>
<script src="~/Scripts/fontawesome/all.min.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
@RenderSection("scripts", required: false)