@model IEnumerable<OnlineJokes.Models.JokesInfo>

@{
    //Layout = null;
}
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/allIndex.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

    <div class=" indexdesignbox">
        <center>
            <p>
                @Html.ActionLink("Add New Jokes", "Create", null, new { @class = "newbox btn btn-dark" })
            </p>
        </center>
        <table id="datatable" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JokesCategoryId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WriterName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JokesName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Jokes)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JokesCategoryId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WriterName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.JokesName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jokes)
                    </td>
                    <td>
                        <img src="~/@item.Image" alt="Alternate Text" style="height: 100px; width: 100px;" />
                    </td>
                    <td>

                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary wod" })<br/>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger wod" })
                    </td>
                </tr>
            }
        </table>
    </div>

@section scripts
{
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#datatable').DataTable();
        });
    </script>
}
