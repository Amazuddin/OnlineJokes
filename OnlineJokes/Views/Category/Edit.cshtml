@model OnlineJokes.Models.JokesCategory

@{
    //Layout = null;
}

    <meta name="viewport" content="width=device-width"/>
    <title>Edit</title>
    <style>
        .b-box {
           
            background-color: #faf8f3;
            border: 1px steelblue;
            border-radius: 25px;
            box-shadow: 0px 0px 20px #d8d4d4;
            margin-bottom: 50px;
            margin-top: 50px;
            padding: 40px;
        }

        .bbt { width: 15%; }

        .error { color: red; }

        .button_design {
            margin-top: 15px;
            text-align: center;
        }
    </style>


<div class="container">
    <div class="row">
        <div class="col-md-12 b-box">

            @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new {name = "insertForm", id = "insertForm", enctype = "multipart/form-data"}))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <center>
                        <h2 style="margin-bottom: 20px; font-family: Monoton;">Edit Jokes Category</h2>
                    </center>
                    @Html.ValidationSummary(true)
                    <div class="form-group row">
                        <div class="col-md-2"> </div>
                        @Html.LabelFor(model => model.CategoryName, new {@class = "control-label col-md-2"})
                        <div class="col-md-5">
                            <input type="text" name="CategoryName" value="@Model.CategoryName" class="form-control"/>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 button_design">
                            <input type="submit" value="Edit" class="btn btn-primary bbt"/>
                            @Html.ActionLink("Back", "Index", null, new {@class = "btn btn-warning bbt"})
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</div>

